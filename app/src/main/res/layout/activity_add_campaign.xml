<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".AddCampaign">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="417dp"
        android:layout_height="50dp"
        android:background="@drawable/cmp_actionbar"
        app:layout_constraintTop_toTopOf="parent" />




    <TextView
        android:id="@+id/txtActTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Campaign"
        android:textColor="@color/colorGradientPrimaryDark1"
        android:textSize="@dimen/activity_large_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar2"
        app:layout_constraintEnd_toEndOf="@+id/toolbar2"
        app:layout_constraintLeft_toRightOf="@+id/btnBack"
        app:layout_constraintStart_toStartOf="@+id/toolbar2"
        app:layout_constraintTop_toTopOf="@+id/toolbar2"
        app:layout_constraintVertical_bias="0.49" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:foregroundGravity="center"
        android:text="Campaign Creation"
        android:textStyle="bold"
        android:textColor="@color/colorGradientPrimaryDark1"
        android:textSize="@dimen/activity_large_size"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/txtdescrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:foregroundGravity="center"
        android:text="try to be as clear as possible and provide Images to \nhelep people know about your campaign"
        android:textStyle="normal"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorGradientPrimary2"
        android:textSize="@dimen/activity_medium_size"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        />
    <EditText
        android:id="@+id/cmpName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/txtdescrip"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="Campaign name"
        android:background="@drawable/txt_login_background"
        android:textStyle="bold"
        android:textColor="@color/colorGradientPrimaryDark1"
        />
    <EditText
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/cmpName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="Description"
        android:background="@drawable/txt_login_background"
        android:textStyle="bold"
        android:textColor="@color/colorGradientPrimaryDark1"
        />

    <!--   <EditText
           android:id="@+id/address"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           app:layout_constraintTop_toBottomOf="@+id/username"
           app:layout_constraintLeft_toLeftOf="parent"
           android:layout_marginTop="40dp"
           android:layout_marginStart="24dp"
           android:layout_marginEnd="24dp"
           android:hint="@string/prompt_username"
           android:background="@drawable/txt_login_background"
           android:textSize="@dimen/activity_medium_size"
           android:textStyle="bold"
           android:textColor="@color/colorGradientPrimaryDark1"
           />
           -->

    <EditText
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:hint="Add Image"
        android:enabled="false"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionDone"

        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc"
        android:background="@drawable/txt_login_background"
        android:textSize="@dimen/activity_medium_size"
        android:textStyle="bold"
        android:textColor="@color/colorGradientPrimaryDark1"
        />
    <ImageView
        android:id="@+id/pickimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintRight_toRightOf="@+id/img"
        app:layout_constraintTop_toTopOf="@+id/img"
        app:layout_constraintBottom_toBottomOf="@+id/img"
        android:src="@drawable/uplodphoto"
        />

    <AutoCompleteTextView
        android:id="@+id/cmbField"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/img"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="Field"
        android:background="@drawable/txt_login_background"
        android:textSize="@dimen/activity_medium_size"
        android:textStyle="bold"
        android:textColor="@color/colorGradientPrimaryDark1"
        />

   <!-- <TextView
        android:id="@+id/targetTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Target :"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"

        app:layout_constraintTop_toBottomOf="@+id/cmbField"/>-->



    <EditText
        android:id="@+id/targetTv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:hint="Target : ... TND"

        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cmbField"
        android:background="@drawable/txt_login_background"
        android:textSize="@dimen/activity_medium_size"
        android:textStyle="bold"
        android:textColor="@color/colorGradientPrimaryDark1"
        />


    <Button
        android:id="@+id/campUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="48dp"

        android:background="@drawable/btn_round_background"
        android:text="Create your Campaign"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/cmpEnd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/targetTv"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="495dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>