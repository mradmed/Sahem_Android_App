<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CodeVerifpage">
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"

        android:src="@drawable/left"
        android:onClick="BackAction"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:src="@drawable/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imageLogo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:foregroundGravity="center"
        android:text="Please enter the code we send you\nto change your Password"
        android:textStyle="bold"
        android:textColor="@color/colorGradientPrimaryDark1"
        android:textSize="@dimen/activity_large_size"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/nb1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="X"
        android:textAlignment="center"
        android:gravity="center"
        android:textColorHint="@color/colorGradientPrimaryDark1"
        android:background="@drawable/txt_login_background"
        android:textSize="@dimen/activity_large_size"
        android:textStyle="bold"
        android:textColor="@color/colorGradientPrimaryDark1"
        />
    <EditText
        android:id="@+id/nb2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        app:layout_constraintLeft_toRightOf="@id/nb1"
        android:layout_marginTop="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="X"
        android:textAlignment="center"
        android:gravity="center"
        android:textColorHint="@color/colorGradientPrimaryDark1"
        android:background="@drawable/txt_login_background"
        android:textSize="@dimen/activity_large_size"
        android:textStyle="bold"
        android:textColor="@color/colorGradientPrimaryDark1"
        />
    <EditText
        android:id="@+id/nb3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        app:layout_constraintLeft_toRightOf="@id/nb2"
        android:layout_marginTop="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="X"
        android:textAlignment="center"
        android:gravity="center"
        android:textColorHint="@color/colorGradientPrimaryDark1"
        android:background="@drawable/txt_login_background"
        android:textSize="@dimen/activity_large_size"
        android:textStyle="bold"
        android:textColor="@color/colorGradientPrimaryDark1"
        />
    <EditText
        android:id="@+id/nb4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        app:layout_constraintLeft_toRightOf="@id/nb3"
        android:layout_marginTop="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="X"
        android:textAlignment="center"
        android:gravity="center"
        android:textColorHint="@color/colorGradientPrimaryDark1"
        android:background="@drawable/txt_login_background"
        android:textSize="@dimen/activity_large_size"
        android:textStyle="bold"
        android:textColor="@color/colorGradientPrimaryDark1"
        />

    <TextView
        android:id="@+id/txtResend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/nb4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:foregroundGravity="center"
        android:text="I didn't receive the Code, "
        android:textStyle="normal"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="90dp"
        android:textColor="@color/colorGradientPrimary2"
        android:textSize="@dimen/activity_medium_size"
        android:textAlignment="center"
        android:gravity="center" />

    <TextView
        android:id="@+id/resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/nb4"
        app:layout_constraintLeft_toRightOf="@+id/txtResend"
        android:text="Resend"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:textColor="@color/colorGradientPrimaryDark1"
        android:textSize="@dimen/activity_medium_size"
        android:textAlignment="center"
        android:gravity="center" />

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="64dp"
        android:enabled="true"
        android:text="CONTINUE"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resend"
        app:layout_constraintVertical_bias="0.2"
        android:background="@drawable/btn_round_background"
        />

</androidx.constraintlayout.widget.ConstraintLayout>