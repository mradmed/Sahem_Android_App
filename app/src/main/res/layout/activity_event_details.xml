<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@drawable/app_background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:background="@drawable/cmp_actionbar"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:onClick="BackAction"
        app:layout_constraintLeft_toLeftOf="@+id/toolbar2"
        app:layout_constraintTop_toTopOf="@+id/toolbar2"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar2"
        android:src="@drawable/left"
         />

    <TextView
        android:id="@+id/txtActTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/btnBack"
        app:layout_constraintTop_toTopOf="@+id/toolbar2"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar2"
        android:text="Event Details"
        android:textStyle="bold"
        android:textColor="@color/colorGradientPrimaryDark1"
        android:textSize="@dimen/activity_large_size"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgUser"
        android:layout_width="66dp"
        android:layout_height="65dp"
        android:layout_marginRight="8dp"
        android:padding="5dp"
        android:src="@drawable/meriem"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar2"
        app:layout_constraintRight_toRightOf="@+id/toolbar2"
        app:layout_constraintTop_toTopOf="@+id/toolbar2" />


    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="24dp"
        android:foregroundGravity="right"
        android:text="In progress"
        android:textStyle="bold"
        android:textColor="@color/colorGradientPrimaryDark2"
        android:textSize="@dimen/activity_medium_size"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginRight="24dp" />


    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txtStatus"
        app:layout_constraintLeft_toLeftOf="parent"
        android:foregroundGravity="center"
        android:text="Campaign's Name"
        android:textStyle="bold"
        android:textColor="@color/colorGradientPrimaryDark1"
        android:textSize="@dimen/activity_large_size"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/imgCampaign"
        android:layout_width="188dp"
        android:layout_height="163dp"
        android:layout_marginTop="10dp"
        android:foregroundGravity="center"
        android:gravity="center_horizontal"

        android:textAlignment="center"
        android:textColor="@color/colorGradientPrimary2"
        android:textSize="@dimen/activity_medium_size"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle" />

    <TextView
        android:id="@+id/txtdescrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imgCampaign"
        app:layout_constraintLeft_toLeftOf="parent"
        android:foregroundGravity="center"
        android:text="Food packages to feed a family for one month are only $60.  Think about that, 60 DNT to feed an entire family for one whole month."
        android:textStyle="normal"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorGradientPrimary1"
        android:textSize="@dimen/activity_medium_size"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgOrg"
        android:layout_width="66dp"
        android:layout_height="65dp"
        android:layout_marginRight="8dp"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"

        app:layout_constraintTop_toBottomOf="@+id/txtdescrip"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/OrgName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txtdescrip"
        app:layout_constraintLeft_toRightOf="@id/imgOrg"
        android:layout_marginTop="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="KHALIL TOUNES"
        android:background="@drawable/txt_login_background"
        android:textStyle="bold"
        android:textColor="@color/colorGradientPrimaryDark1"
        />

    <TextView
        android:id="@+id/txtDedline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgOrg"
        android:background="@drawable/txt_login_background"
        android:text="1 Days Left"
        android:textSize="@dimen/activity_medium_size"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/txtRaised"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txtDedline"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="3100 DTN Raised"
        android:background="@drawable/txt_login_background"
        android:textStyle="bold"
        android:textColor="@color/colorGradientPrimaryDark2"
        />

    <SeekBar
        android:id="@+id/dons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txtRaised"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:max="10000"
        android:min="0"
        android:progress="@android:integer/config_shortAnimTime"

        />


</androidx.constraintlayout.widget.ConstraintLayout>