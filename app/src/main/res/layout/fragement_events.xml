<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGradientSecondary3"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <AutoCompleteTextView
        android:id="@+id/txtCat"
        android:layout_width="363dp"
        android:layout_height="45dp"

        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="24dp"
        android:hint="Category"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColorHint="@color/colorGradientPrimaryDark1"
        android:textColor="@color/colorGradientPrimaryDark1"
        android:background="@drawable/txt_login_background"
        />

    <ImageView
        android:id="@+id/imgCbx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:src="@drawable/arrow"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listEvents"
        android:layout_width="387dp"
        android:layout_height="495dp"
        android:layout_below="@+id/txtCat"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@+id/txtCat" />

    <Button
        android:id="@+id/btnEventNear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listEvents"
        android:layout_alignBottom="@+id/listEvents"
        android:layout_marginStart="24dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="-86dp"
        android:background="@drawable/btn_round_background"
        android:text="Events Near You"
        android:textColor="@color/white" />

</RelativeLayout>